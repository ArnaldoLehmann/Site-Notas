@page
@model Site_Aele.NotaModels
@{

}

<div class="titulo">
    
    <h1>Calculadora de Notas</h1>

</div>

<div class="texto-nota-1">
    
    <p>Insira a nota da NP1</p>

</div>

<div class="texto-nota-2">
   
    <p>Insira a nota da NP2</p>

</div>

<div class="texto-nota-pim">
    
    <p>Insira a nota do PIM</p>

</div>




<form method="post" >
    <!--Caixas de entrada-->
    <div class="caixa-entrada-nota1"> 
        <input asp-for="Nota1" type="number" name="nota1" step="0.5" min="0" max="10" />
    </div>
    <div class="caixa-entrada-nota2">
        <input asp-for="Nota2" type="number" name="nota2" step="0.5" min="0" max="10" />
    </div>
    <div class="caixa-entrada-pim">
        <input asp-for="NotaPim" type="number" name="notaPim" step="0.5" min="0" max="10" />
    </div>
    <div class="container-centro">
        <!--Botão de envio-->

<button class="botao-enviar" type="submit">Calcular</button>

    </div>
</form>

